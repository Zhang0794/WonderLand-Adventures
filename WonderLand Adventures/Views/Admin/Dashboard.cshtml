@{
    ViewBag.Title = "管理员仪表板";
}

<div class="dashboard-container">
    <h1 class="dashboard-title">管理员仪表板</h1>

    <div class="stats-container">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-value">@ViewBag.VisitorsToday</div>
            <div class="stat-label">今日访客</div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-ticket-alt"></i>
            </div>
            <div class="stat-value">@ViewBag.TicketsSold</div>
            <div class="stat-label">今日售票</div>
        </div>
    </div>

    <div class="admin-actions">
        <a href="@Url.Action("Logout", "Admin")" class="btn-logout">退出登录</a>
    </div>
</div>

<style>
    :root {
        --primary: #74b9ff;
        --secondary: #0984e3;
        --light: #f5f7fa;
        --dark: #333;
    }

    .dashboard-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px;
    }

    .dashboard-title {
        color: var(--dark);
        text-align: center;
        margin-bottom: 50px;
        font-size: 2.5rem;
    }

    .stats-container {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        gap: 30px;
    }

    .stat-card {
        background-color: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        text-align: center;
        width: 300px;
        transition: all 0.3s;
    }

        .stat-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        }

    .stat-icon {
        font-size: 3rem;
        color: var(--primary);
        margin-bottom: 20px;
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: bold;
        color: var(--dark);
        margin-bottom: 10px;
    }

    .stat-label {
        font-size: 1.2rem;
        color: #666;
    }

    .admin-actions {
        text-align: center;
        margin-top: 50px;
    }

    .btn-logout {
        display: inline-block;
        padding: 12px 30px;
        background-color: var(--primary);
        color: white;
        text-decoration: none;
        border-radius: 30px;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-logout:hover {
            background-color: var(--secondary);
            transform: translateY(-2px);
        }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">