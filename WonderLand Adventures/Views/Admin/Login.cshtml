@{
    ViewBag.Title = "管理员登录";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WonderLand Adventures</title>
    <style>
        :root {
            --primary: #74b9ff;
            --secondary: #0984e3;
            --error: #ff6b6b;
        }

        body {
            font-family: 'Comic Sans MS', cursive, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .login-container {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            width: 400px;
            padding: 40px;
            text-align: center;
        }

        .logo {
            font-size: 2.5rem;
            color: var(--secondary);
            margin-bottom: 20px;
            font-weight: bold;
        }

        .login-title {
            font-size: 1.8rem;
            color: #333;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 25px;
            text-align: left;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: bold;
                color: #555;
            }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: var(--primary);
                outline: none;
                box-shadow: 0 0 0 3px rgba(116,185,255,0.2);
            }

        .btn-login {
            background-color: var(--primary);
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 30px;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s;
            width: 100%;
            font-weight: bold;
        }

            .btn-login:hover {
                background-color: var(--secondary);
                transform: translateY(-2px);
            }

        .error-message {
            color: var(--error);
            margin-top: 15px;
        }

        .admin-hint {
            margin-top: 20px;
            color: #777;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo">WonderLand</div>
        <h2 class="login-title">管理员登录</h2>

        @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="adminId">管理员ID</label>
                <input type="text" id="adminId" name="adminId" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="password">密码</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>

            <button type="submit" class="btn-login">登录</button>

            if (!ViewData.ModelState.IsValid)
            {
                <div class="error-message">
                    @Html.ValidationSummary(true)
                </div>
            }
        }

        <div class="admin-hint">
            测试账号: yx/123 或 sss/abc
        </div>
    </div>
</body>
</html>