@model WonderLandAdventures.Models.ContactForm
@{
    ViewBag.Title = "Contact Us";
}

<div class="page-header">
    <h1>Contact WonderLand</h1>
    <p>We'd love to hear from you! Reach out with questions, feedback, or just to say hello.</p>
</div>

<div class="contact-container">
    <div class="contact-form">
        <h2 style="text-align: center; color: #ff6b6b; margin-bottom: 30px;">Send Us a Message</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter your name" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ContactInfo)
                @Html.TextBoxFor(m => m.ContactInfo, new { @class = "form-control", placeholder = "Email or phone number" })
                @Html.ValidationMessageFor(m => m.ContactInfo)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Message)
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Type your message here...", rows = 6 })
                @Html.ValidationMessageFor(m => m.Message)
            </div>

            <button type="submit" class="btn-submit">Send Message</button>
        }
    </div>

    <div class="contact-info">
        <div class="info-card">
            <div class="info-icon">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <h3>Visit Us</h3>
            <p>
                123 Fantasy Lane<br>
                Orlando, FL 32830<br>
                United States
            </p>
        </div>

        <div class="info-card">
            <div class="info-icon">
                <i class="fas fa-phone-alt"></i>
            </div>
            <h3>Call Us</h3>
            <p>
                General Inquiries: +1 (800) 555-1234<br>
                Group Sales: +1 (800) 555-5678<br>
                Guest Services: +1 (800) 555-9012
            </p>
        </div>

        <div class="info-card">
            <div class="info-icon">
                <i class="fas fa-envelope"></i>
            </div>
            <h3>Email Us</h3>
            <p>
                General: info@wonderland.com<br>
                Support: help@wonderland.com<br>
                Groups: groups@wonderland.com
            </p>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --hotel: #FF9AA2;
            --attractions: #FFB7B2;
            --about: #FFDAC1;
            --contact: #E2F0CB;
            --tickets: #B5EAD7;
        }

        .page-header {
            text-align: center;
            padding: 50px 0 30px;
            background: linear-gradient(135deg, #74b9ff, #0984e3);
            color: white;
        }

            .page-header h1 {
                font-size: 3rem;
                margin-bottom: 15px;
            }

            .page-header p {
                font-size: 1.2rem;
                max-width: 800px;
                margin: 0 auto;
            }

        .contact-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 0 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .contact-form {
            width: 100%;
            background-color: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin-bottom: 40px;
        }

        .form-group {
            margin-bottom: 25px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: bold;
                color: #ff6b6b;
            }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #ddd;
            border-radius: 10px;
            font-size: 1rem;
            font-family: 'Comic Sans MS', cursive, sans-serif;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #74b9ff;
                outline: none;
                box-shadow: 0 0 0 3px rgba(116,185,255,0.2);
            }

        textarea.form-control {
            min-height: 150px;
            resize: vertical;
        }

        .btn-submit {
            background-color: #ff6b6b;
            color: white;
            padding: 12px 30px;
            border-radius: 30px;
            font-size: 1.1rem;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            display: block;
            margin: 0 auto;
        }

            .btn-submit:hover {
                background-color: #ff5252;
                transform: scale(1.05);
            }

        .contact-info {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .info-card {
            width: 30%;
            min-width: 250px;
            background-color: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            text-align: center;
            transition: all 0.3s ease;
        }

            .info-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.2);
            }

        .info-icon {
            font-size: 2.5rem;
            color: #74b9ff;
            margin-bottom: 15px;
        }

        .info-card h3 {
            font-size: 1.5rem;
            color: #ff6b6b;
            margin-bottom: 15px;
        }

        .info-card p {
            color: #555;
            line-height: 1.6;
        }

        .field-validation-error {
            color: #ff5252;
            font-size: 0.9rem;
            margin-top: 5px;
            display: block;
        }

        @@media (max-width: 768px) {
            .info-card {
                width: 100%;
            }
        }
    </style>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}